<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/id_listview"
        android:layout_width="247dp"
        android:layout_height="194dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ListView>

    <TextView
        android:id="@+id/id_land_textView"
        android:layout_width="280dp"
        android:layout_height="275dp"
        android:gravity="right"
        android:text="QB Description"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/id_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/id_listview"
        app:layout_constraintTop_toTopOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/id_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_listview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_listview"
        app:layout_constraintTop_toBottomOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/id_jersey_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jersey  #"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_land_textView"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toStartOf="@+id/id_listview"
        app:layout_constraintTop_toBottomOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.324" />

    <TextView
        android:id="@+id/id_Madden_Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madden Rating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/id_land_textView"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="@+id/id_listview"
        app:layout_constraintTop_toBottomOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:id="@+id/id_draft_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Drafted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_Madden_Rating"
        app:layout_constraintTop_toBottomOf="@+id/id_listview"
        app:layout_constraintVertical_bias="0.263" />

</androidx.constraintlayout.widget.ConstraintLayout>

